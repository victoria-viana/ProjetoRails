<% provide(:title, "Log in") %>
<h1>Log in Client</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:client_session, url: clientlogin_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

<p>New client? <%= link_to "Sign up now!", client_new_registration_path %></p>

  </div>
</div>
